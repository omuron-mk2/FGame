.header
  .header-content
    .main-header
      .header-icon
        = link_to image_tag("logo_game.png", size: "150x40"), root_path
      = form_with(url: search_games_path, local: true, method: :get, class: "search-box") do |form|
        = form.text_field :keyword, placeholder: "知ってるタイトルで検索", class: "class-serch__text"
        = form.submit "検索",class: "search-submit"
    .header-nav
      .right-list
        .right-list__mypage
          = link_to "投稿一覧",all_games_path,class:"right-list__link1" 
      - if user_signed_in?
        .right-list__mypage
          = link_to current_user.nickname,root_path,class:"right-list__link3" 
        .right-list__mypage
          = link_to destroy_user_session_path, method: :delete,class:"right-list__link" do
            ログアウト
        .right-list__mypage
          = link_to "投稿する",new_game_path,class:"right-list__link2" 
      - else
        .right-list__mypage
          = link_to "ログイン",user_session_path, class:"right-list__link" 
        .right-list__mypage
          = link_to "新規登録",new_user_registration_path, class:"right-list__link" 
